<div class="container">

  <h1>New game</h1>
  <h2><%= @letters.each { |letter| puts letter }.join(" ") %></h2>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <input class="form-control" type="text" name="attempt" placeholder="Your attempt">
    </div>
    <div>
      <input type="submit" value="Submit!">
    </div>
    <%= hidden_field_tag :start_time, Time.now %>
    <%= hidden_field_tag :letters, @letters %>
  </form>

</div>
